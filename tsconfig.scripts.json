{
	"compilerOptions": {
		"allowJs": true,
		"alwaysStrict": true,
		"baseUrl": "build-scripts",
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"declaration": true,
		"lib": [
			"ES2023"
		],
		"module": "commonjs",
		"noImplicitAny": true,
		"sourceMap": true,
		"rootDir": "./build-scripts",
		"target": "ES2023",
	},
	"include": [
		"build-scripts/**/*",
	],
}
